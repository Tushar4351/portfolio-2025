---
import Navbar from "../components/NavBar";
import Layout from "../layouts/Layout.astro";
import Slider from "../components/Slider/Slider";
import SocialLinks from "../components/SocialLinks";
import { HomeHeader, SectionHeading } from "../components/Headers";
import Services from "../components/Services";
import { Image } from "astro:assets";
---

<Layout title="Tushar">
  <Navbar client:load />
  <main class="flex-1 mt-2">
    <div class="flex flex-col lg:flex-row gap-2 h-full">
      <!-- left part -->
      <div
        class="w-full md:w-1/2 rounded-xl overflow-hidden h-[500px] md:h-full md:sticky md:top-0"
      >
        <Slider client:load />
      </div>
      <!-- right part -->
      <div
        class="w-full md:w-1/2 overflow-y-auto max-h-[calc(100vh-6rem)] scroll-smooth"
      >
        <div class="flex flex-col gap-2">
          <div class="md:grid md:grid-cols-5 gap-2">
            <div class="md:col-span-3"><HomeHeader client:load /></div>
            <div class="md:col-span-2"><SocialLinks client:load /></div>
          </div>
          <SectionHeading title="Services" client:load />
          <div>
            <Services client:load />
          </div>
          <SectionHeading title="Projects" link="View All" client:load />
        </div>
      </div>
    </div>
  </main>
</Layout>
