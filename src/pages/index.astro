---
import Navbar from "../components/NavBar";
import Layout from "../layouts/Layout.astro";
import Slider from "../components/Slider/Slider";
import SocialLinks from "../components/SocialLinks";
import { HomeHeader, SectionHeading } from "../components/Headers";
import { Image } from "astro:assets";
---

<Layout title="Tushar">
  <Navbar client:load />
  <main class="flex-1 mt-2">
    <div class="flex flex-col lg:flex-row gap-2 h-full">
      <!-- left part -->
      <div class="w-full lg:w-1/2 rounded-xl overflow-hidden h-full">
        <Slider client:load />
      </div>
      <!-- right part -->
      <div class="w-full lg:w-1/2 rounded-xl">
        <div class="flex flex-col gap-2">
          <div class="flex gap-2">
            <HomeHeader client:load />
            <SocialLinks client:load/>
          </div>
          <SectionHeading title="Services" client:load />
        </div>
      </div>
    </div>
  </main>
</Layout>
